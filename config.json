{
	"settings": 
	{
		"mode": "train_test",
		"model_name": "transformer",
		"load_checkpoint": "",
		"load_training_settings": true,
		"attr_prediction_type": "nn"
	},
	"data":
	{
		"dataset": "motionsense",
		"classification_type": "classes",
		"one_hot_encoding": false,
		"labeling_mode":"middle",
		"normalize": "",
		"window_size": 100,
		"window_shift": 0.5,
		"test_size": 0.1,
		"split_type": "person",
		"np_seed": 42
	},
    "model": 
	{
		"transformer": 
		{
			"encode_position": false,
			"dim": 64,
			"nhead": 8,
			"num_encoder_layers": 6, 
			"dim_feedforward": 128, 
			"dropout": 0.1, 
			"activation": "gelu"
		},
		"baseline":
		{
			"dim": 64,
			"dropout": 0.1
		}
	},
	"training":
	{
		"batch_size": 128,
		"n_workers": 4,
		"lr": 1e-3,
		"weight_decay": 1e-2,
		"eps": 1e-10,
		"lr_scheduler_step_size": 5,
		"lr_scheduler_gamma": 0.5,
		"n_epochs": 25
	},
	"setup":
	{
		"n_freq_checkpoint": 5,
		"dir_path": "D:\\transformer_dir",
		"device_id": "cuda:0"
	}
}